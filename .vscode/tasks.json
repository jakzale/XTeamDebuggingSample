{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Functions Host",
      "identifier": "runFunctionsHost",
      "type": "shell",
      "command": "func host start",
      "isBackground": true,
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": [],
      "dependsOn": [
      //  "buildFunctionApp"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/FunctionsApp/bin/Debug/netstandard2.0"
      }
    },
    {
      "label": "Build All",
      "identifier": "buildFunctionApp",
      "type": "shell",
      "command": "dotnet build",
      "isBackground": false,
      "problemMatcher":"$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}

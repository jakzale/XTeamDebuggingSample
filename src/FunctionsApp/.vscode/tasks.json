      "isBackground": true,
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": [],
      "dependsOn": [
        "buildFunctionApp"
      ]
    },
    {
      "label": "Build FunctionApp",
      "identifier": "buildFunctionApp",
      "type": "shell",
      "command": "dotnet build",
      "isBackground": false,
      "problemMatcher":"$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
